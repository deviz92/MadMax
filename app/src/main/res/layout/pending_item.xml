<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="4dp"
    >

    <RelativeLayout
        android:id="@+id/left_side"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_relative"
            android:paddingLeft="4dp"

            >

            <TextView
                android:id="@+id/tv_pending"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:clickable="false"
                android:textSize="18dp"
                android:text="PendingExpenseName"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_pricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/tv_pending"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:textSize="18dp"
                android:text="â‚¬ 3000"
                android:gravity="end"
                android:textStyle="bold"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_relative"
            android:paddingLeft="4dp"

            >

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/group_default"
                />

            <TextView
                android:id="@+id/tv_receiver"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toRightOf="@+id/img_photo"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:textSize="16dp"
                android:text="GroupName"
                />

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/left_side"
        android:layout_marginLeft="12dp"
        >

        <RelativeLayout
            android:id="@+id/relative_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/thumb_up_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/thumb_up_black"
                />

            <TextView
                android:id="@+id/tv_up_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/thumb_up_button"
                android:gravity="center"
                android:text="0"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/thumb_down_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/thumb_down_black"
                />

            <TextView
                android:id="@+id/tv_down_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/thumb_down_button"
                android:gravity="center"
                android:text="0"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_participants"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/participants_icon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/group"
                />

            <TextView
                android:id="@+id/tv_participants_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/participants_icon"
                android:gravity="center"
                android:text="10"
                android:textSize="14dp" />

        </RelativeLayout>


    </LinearLayout>






</RelativeLayout>