<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/group"
        />



    <TextView
        android:id="@+id/tv_pending"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_photo"
        android:paddingLeft="8dp"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:textSize="18dp"
        android:text="PendingExpenseName"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pending"
        android:layout_toRightOf="@+id/img_photo"
        android:paddingLeft="8dp"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:textSize="14dp"
        android:text="GroupName"
        />




    <TextView
        android:id="@+id/tv_pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tv_pending"
        android:clickable="false"
        android:textSize="18dp"
        android:text="â‚¬ 30"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_pricetext"
        android:layout_marginRight="12dp"
        >

        <RelativeLayout
            android:id="@+id/relative_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/thumb_up_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/thumb_up_black"
                />

            <TextView
                android:id="@+id/tv_up_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/thumb_up_button"
                android:gravity="center"
                android:text="0"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/thumb_down_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/thumb_down_black"
                />

            <TextView
                android:id="@+id/tv_down_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/thumb_down_button"
                android:gravity="center"
                android:text="0"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_participants"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/participants_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/people_black"
            />

        <TextView
            android:id="@+id/tv_participants_count"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/participants_icon"
            android:gravity="center"
            android:text="10"
            android:textSize="14dp" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>