<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:onClick="onClickOpenGroup"
    android:clickable="true">

    <ImageView
        android:id="@+id/img_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/group"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/img_group"
        android:textSize="16dp"
        android:text="GroupName"/>

    <TextView
        android:id="@+id/tv_group_num_notifications"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:background="@color/colorPrimary"
        android:textSize="14dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/tv_group_name"
        android:layout_alignBottom="@+id/tv_group_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="111"/>

</RelativeLayout>

