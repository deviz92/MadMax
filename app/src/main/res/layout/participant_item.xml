<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="7dp"
        android:src="@drawable/group_default"
        />

    <TextView
        android:id="@+id/tv_participant_name"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:text="ParticipantName"
        android:textColor="@color/colorPrimaryText"
        />


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/owes_you"
            android:textColor="@color/colorPrimaryText"
            android:textSize="11sp"
            android:gravity="end"
            android:textAlignment="textEnd"
            />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_balance_text"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="2225.25€"
            android:gravity="end"
            android:textAlignment="textEnd"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="15dp"
        >

        <TextView
            android:id="@+id/already_paid_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="HAS PAID"
            android:textColor="@color/colorPrimaryText"
            android:textSize="11sp"
            android:gravity="end"
            android:textAlignment="textEnd"
            />

        <TextView
            android:id="@+id/tv_already_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/already_paid_text"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="2225.45€"
            android:gravity="end"
            android:textAlignment="textEnd"

            />



    </RelativeLayout>




</LinearLayout>