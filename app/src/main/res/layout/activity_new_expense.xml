<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_expense"
    android:orientation="vertical"
    tools:context="com.polito.mad17.madmax.activities.expenses.NewExpenseActivity">

    <EditText android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="@string/edit_description_hint"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/edit_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:inputType="numberDecimal"

            android:hint="@string/edit_amount_hint"
            android:textSize="20sp"
        />

        <Spinner android:id="@+id/currency"
            android:layout_width="75dp"
            android:layout_height="match_parent"
        />

    </LinearLayout>

    <Button android:id="@+id/save_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_gravity="center"

        android:text="@string/save"
    />

</LinearLayout>
