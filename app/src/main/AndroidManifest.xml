<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polito.mad17.madmax">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.login.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.groups.GroupExpensesActivity" />

        <activity android:name=".activities.expenses.NewExpenseActivity" />

        <activity android:name=".activities.users.FriendDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.groups.GroupDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.groups.NewGroupActivity" />

        <activity android:name=".activities.groups.GroupInfoActivity"
            android:label="@string/title_activity_group_info"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.users.NewMemberActivity"
            android:label="@string/title_activity_new_member"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.login.SignUpActivity" />

        <activity android:name=".activities.login.EmailVerificationActivity" />

        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>