<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polito.mad17.madmax">

    <!-- uses-permission android:name="android.permission.MANAGE_DOCUMENTS" / -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.login.LoginSignUpActivity"
            android:theme="@style/AppTheme.Login"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="MadMaxInvitiationFilter">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="www.madmax.com"
                    android:pathPrefix="/beeshare"
                    android:scheme="http" />
                <!-- note that the leading "/" is required for pathPrefix -->
                <!-- Accepts URIs that begin with "example://gizmos” -->
                <data
                    android:host="beeshare"
                    android:scheme="madmax" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.groups.GroupExpensesActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity android:name=".activities.expenses.NewExpenseActivity" />
        <activity
            android:name=".activities.users.FriendDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.groups.GroupDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.groups.NewGroupActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.users.NewMemberActivity"
            android:label="@string/title_activity_new_member"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SettingsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ProfileEdit"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.expenses.ChooseGroupActivity" />
        <activity
            android:name=".activities.expenses.PendingExpenseDetailActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.expenses.ExpenseDetailActivity"
            android:parentActivityName=".activities.groups.GroupDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.groups.PayGroupActivity"
            android:parentActivityName=".activities.groups.GroupDetailActivity"
            >
        </activity>

        <service
            android:name=".service.FirebaseServiceMessage">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.FirebaseServiceFCM">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>